<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/button_menu1" />
            <stroke
                android:width="1dp"
                android:color="@color/button_menu2" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/button_menu1"
                android:endColor="@color/button_menu2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_menu2" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>